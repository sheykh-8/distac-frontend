{
  "hosting": [
    {
      "target": "main",
      "public": "out",
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
      "rewrites": [
        {
          "source": "/",
          "destination": "/index.html"
        },
        {
          "source": "/login",
          "destination": "/login.html"
        },
        {
          "source": "/dashboard",
          "destination": "/dashboard.html"
        }
      ]
    }
  ]
}
